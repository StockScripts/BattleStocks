<!DOCTYPE html>
<html>
<head>
  <title>BattleStocks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Nav Bar Header -->
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
	    <div class="container">
	    	<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    	</a>
	    	<a class="brand" href="/">BattleStocks</a>
	    	<div class="nav-collapse">
	    		<ul class="nav pull-right">
    				<% if current_user %>
              <li><%= link_to current_user.username, user_path(current_user) %></li>
    					<li><%= link_to "Logout", log_out_path %></li>
  					<% else %>
    					<li><%= link_to "Login", log_in_path %></li>
  					<% end %>
				</ul>
			</div>
		</div>
  	</div>
</div>

<!-- Home Page Content -->
<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>

<!-- Footer -->
<div class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div class="container">
        <div class="nav-collapse">
          <ul class="nav">
            <li><a href="#" id="randomjs">RandomJS</a></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Team", team_path %></li>
            <li><%= link_to "Help", help_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
            <li><%= link_to "Feedback", feedback_path %></li>
          </ul>
      </div>
    </div>
  </div>
</div>

</body>
</html>
