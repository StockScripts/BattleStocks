<!DOCTYPE html>
<html>
<head>
  <title>BattleStocks</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Nav Bar Header -->
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner header_style">
	    <div class="container header_style">
	    	<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    	</a>
	    	<a class="brand" href="/">BattleStocks</a>
	    	<div class="nav-collapse">
	    		<ul class="nav pull-right">
    				<% if current_user %>
              <li><%= link_to current_user.username, user_path(current_user) %></li>
    					<li><%= link_to "Logout", log_out_path %></li>
  					<% else %>
    					<li><%= link_to "Login", log_in_path %></li>
  					<% end %>
				</ul>
			</div>
		</div>
  	</div>
</div>

<!-- Home Page Content -->
<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>

<!-- Footer -->
<div id="navbar">
  <%= render :partial => 'partials/footer'%>
</div>

</body>
</html>
