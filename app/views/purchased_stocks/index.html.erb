<%- model_class = PurchasedStock.new.class -%>

<% if logged_in? %>
  <div class = "container-box">
    <h2>My Stocks</h2>
    <% if !@owned_stock.empty? %>
      <table class="table table-striped">
              <thead>
                <tr>
                  <th>Game</th>
                  <th>Stock Code</th>
                  <th>Total Quantity</th>
                  <th>Cost Basis</th>
                  <th>Value In Stocks</th>
                  <th>Money Earned</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% @owned_stock.each do |stock| %>
                <tr>
                  <td><%= link_to stock.user_game.game.name, game_path(stock.user_game.game) %>
                  <td><%= stock.stock_code %></td>
                  <td><%= stock.total_qty %></td>
                  <td><%= number_to_currency(stock.money_spent.to_f/100)%></td>
                  <td><%= number_to_currency(stock.value_in_stocks.to_f/100)%></td>
                  <td><%= number_to_currency(stock.money_earned.to_f/100)%></td>
                  <td><%= link_to "View", purchased_stock_path(stock), :class => 'btn btn-mini' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
    <% else %>
      <h3>You do not own stock.</h3>
    <% end %>
  </div>
<% end %>