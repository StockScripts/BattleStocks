<%- model_class = @purchased_stock.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>


<dl class="dl-horizontal">
  <dt><strong>Username:</strong></dt>
  <dd><%= @purchased_stock.user_game.user.username %></dd>
  <dt><strong>Game:</strong></dt>
  <dd><%= @purchased_stock.user_game.game.name %></dd>
  <dt><strong>Stock Code:</strong></dt>
  <dd><%= @purchased_stock.stock_code %></dd>
  <dt><strong>Money Spent:</strong></dt>
  <dd>$<%= @purchased_stock.money_spent.to_f/100 %></dd>
  <dt><strong>Money Earned:</strong></dt>
  <dd>$<%= @purchased_stock.money_earned.to_f/100 %></dd>
  <dt><strong>Total Quantity:</strong></dt>
  <dd><%= @purchased_stock.total_qty %></dd>
  <dt><strong>Total Value:</strong></dt>
  <dd>$<%= @purchased_stock.value_in_stocks.to_f/100 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchased_stocks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchased_stock_path(@purchased_stock), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchased_stock_path(@purchased_stock),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
