<%= simple_form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <div class="control-group">
    <%= f.label :game_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div> 
  
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label', required: false%>
    <div class="controls">
      <%= f.text_field :start_date, 'data-behaviour' => 'datepicker', :value => (@game.start_date.in_time_zone('Eastern Time (US & Canada)')).to_date %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label', required: false %>
    <div class="controls">
      <%= f.text_field :end_date, 'data-behaviour' => 'datepicker', :value => (@game.end_date.in_time_zone('Eastern Time (US & Canada)')).to_date %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Budget in $", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :budget, :class => 'text_field', :value => (@game.budget/100)%>
    </div>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %> 
  <%= link_to "Cancel", game_path(@game), :class => 'btn' %> 
</fieldset>
<% end %>