<strong>Buying</strong></br>
<%= simple_form_for @transaction, :html => { :class => 'form-buysell' } do |f| %>
	<%= f.input :stock_code, :label => "Stock Code" %>
	<%= f.input :qty, as: :string,:label => "Quantity" %>
	<%= f.hidden_field :is_buy, :value => true %>
	<%= f.hidden_field :game_id, :value => @game.id %>
	<p align="right"><%= f.submit "Buy", :class => 'btn btn-info' %></p>
 <% end %>