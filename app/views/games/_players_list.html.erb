<% if @game.users.all.count == 1 %>
  <h4> There are no other players. </h4>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @game.users.alphabetical.each do |user| %>
        <tr>
          <% if current_user == user %>
            <td><strong> You </strong></td>
            <td><%= link_to "View Your Account", user_path(current_user), :class => 'btn btn-mini btn-info' %></td>
          <% else %>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
