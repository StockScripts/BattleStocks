<% if @game.users.all.count == 1 %>
  <h4> There are no other players. </h4>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @game.users.alphabetical.each do |user| %>
        <tr>
          <% if current_user == user %>
            <td><%= user.username %><strong> (You)</strong></td>
            <td><%= link_to user.email, user_path(current_user)%></td>
          <% else %>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
