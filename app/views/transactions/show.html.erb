<%- model_class = @transaction.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchased_stock_id) %>:</strong></dt>
  <dd><%= @transaction.purchased_stock_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @transaction.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qty) %>:</strong></dt>
  <dd><%= @transaction.qty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value_per_stock) %>:</strong></dt>
  <dd><%= @transaction.value_per_stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_buy) %>:</strong></dt>
  <dd><%= @transaction.is_buy %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_path(@transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_path(@transaction),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
