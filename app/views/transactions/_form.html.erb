<%= form_for @transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :purchased_stock_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :purchased_stock_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, 'data-behaviour' => 'datepicker' %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :qty, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :qty, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value_per_stock, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value_per_stock, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_buy, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_buy, :class => 'check_box' %>
    </div>
  </div>
  <%= f.hidden_field :game_id, :value => @game.id %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transactions_path, :class => 'btn' %>
  </div>
<% end %>
