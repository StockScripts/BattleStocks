<h2>Current Games</h2>
<%= link_to raw("<i class='icon-plus'></i> New Game"), new_game_path, :type => 'button', :class => 'btn btn-mini btn-success' %>
<% if ! @current_user_games.empty? %>
  <% @current_user_games.each do |ugame| %>
    <div class = "home_game_content">
      <div class = "home_game_header">
        <%= link_to ugame.game.name, game_path(ugame.game) %>
        <div class = "pull-right">
          <%= ugame.game.start_date.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%y") %> - <%= ugame.game.end_date.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%y") %>
        </div>
      </div>
        <ul class = "home_game_competitor" >
          <li>1st Place: <%= link_to UserGame.for_game(ugame.game).by_portfolio_value[0].user.username, user_path(ugame.user) %></li>
          <li>2nd Place: 
            <% if UserGame.for_game(ugame.game).size >= 2 %>
              <%= link_to UserGame.for_game(ugame.game).by_portfolio_value[1].user.username, user_path(ugame.user) %>
            <% else %>
              N/A
            <% end %>
            </li>
          <li>3rd Place:
            <% if UserGame.for_game(ugame.game).size >= 3 %>
                <%= link_to UserGame.for_game(ugame.game).by_portfolio_value[2].user.username, user_path(ugame.user) %>
              <% else %>
                N/A
              <% end %>
          </li>
        </ul> 
      <div class = "home_game_rank pull-right">
        Rank:
        <%= ugame.get_rank %>/<%= ugame.game.users.count %>
        <br>
        Balance: 
        <%= number_to_currency(ugame.balance.to_f/100) %>
        <br>
        Stock Value: 
        <%= number_to_currency(ugame.total_value_in_stocks.to_f/100) %>
      </div>
    </div>
  <% end %>



<% else %>
You currently aren't in a game.
<% end %>
