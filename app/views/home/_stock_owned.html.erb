<% if !@owned_stock.empty? %>
	<table class="table table-condensed table-striped">
          <thead>
            <tr>
              <th><p>Stock Code</p></th>
              <th><p align="right">Current Value</p></th>
            </tr>
          </thead>
          <tbody>
          <% @owned_stock_array.uniq.each do |stock| %>
            <tr>
                <td><%= link_to stock[0], src="/search?query=#{stock[0]}" %></td>
                <td><p align="right"><%= number_to_currency(stock[1].to_f/100) %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
<% else %>
  <h3>You do not own stock.</h3>
<% end %>