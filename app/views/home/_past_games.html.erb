<h2>Past Games</h2>
<% if !@past_games.empty? %>
<table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Winner</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Budget</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @past_games.each do |game| %>
            <tr>
              <td><%= link_to game.name, game_path(game) %></td>
              <td>
                <% if game.winner_id.nil? %>
                N/A
                <% else %>
                <%= link_to User.find_by_id(game.winner_id).username, user_path(game.winner_id) %>
                <% end %>
              </td>
              <td><%= game.start_date.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%y (%I:%M%P)") %></td>
              <td><%= game.end_date.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%y (%I:%M%P)") %></td>
              <td><%= number_to_currency(game.budget/100) %></td>
                            <td>
                <% if game.is_terminated %>
                  Terminated
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
<% else %>
  <h3>There are no past games.</h3>
<% end %>
