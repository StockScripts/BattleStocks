<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_hash, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password_hash, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_salt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password_salt, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_points, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :total_points, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_admin, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_admin, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_active, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
